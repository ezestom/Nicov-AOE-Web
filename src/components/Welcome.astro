---
import { Image } from "astro:assets";
import warrior from "../img/warrior5.jpg";
import nicov from "../img/nicov-title.png";
---

<section class="max-h-screen max-w-screen">
	<article class="header-article">
		<a href="/home" > 
			<Image class="nicov" src={nicov} alt="nicov" />
			<code class="text-white text-xs absolute bottom-0 left-0">Click Nicov to go Home <span>&rarr;</span> </code>
		</a>
		<Image class="warrior" src={warrior} alt="warrior" />
	</article>
</section>

<style>
	section {
		position: relative;
		width: 100vw;
		height: 100vh;
		display: flex;
		justify-content: center;
		align-items: center;
		overflow: hidden;
	}
	.warrior {
		min-width: 1600px;
		height: 100vh;
		overflow-y: hidden;
		background-image: radial-gradient(
				circle,
				rgba(0, 0, 0, 0.8) 50%,
				transparent 100%
			),
			radial-gradient(circle, transparent 0%, rgba(0, 0, 0, 0.8) 50%),
			linear-gradient(rgba(0, 0, 0, 0.8), rgba(0, 0, 0, 0)),
			linear-gradient(rgba(0, 0, 0, 0), rgba(0, 0, 0, 0.8));
		mask: radial-gradient(circle at center, white 15%, transparent 65%);
	}
	.nicov {
		width: 100%;
		max-width: 600px;
		position: absolute;
		z-index: 1;
		top: 1rem;
		left: 1rem;
		transition: all .5s ease-in-out;
		view-transition-name: nicov;
		filter: drop-shadow(0 0 .05em crimson) brightness(1.3);
	}

	.nicov:hover {
		filter: drop-shadow(0 0 .5em crimson) brightness(1.5);
	}

	section::before {
		z-index: -1;
		content: "";
		position: absolute;
		background-image: url(../img/war1.jpg);
		view-transition-name: fade;
		background-size: cover;
		background-position: bottom;
		height: 100%;
		width: 100%;		
	}
</style>
