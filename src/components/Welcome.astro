---
import { Image } from "astro:assets";
import warrior from "../img/warrior5.jpg";
import nicov from "../img/nicov-title.png";

const scrollToBottom = () => {
	console.log("Scrolling to bottom");
	window.scrollTo({
		top: document.body.scrollHeight,
		behavior: "smooth",
	});
};
---

<section>
	<article class="header-article">
		<Image class="img2" src={nicov} alt="nicov" />
		<Image class="img" src={warrior} alt="warrior" />
		<button
			class="absolute bottom-5 text-white border-spacing-10 border p-1 ">scroll</button
		>
	</article>
</section>

<style>
	.header-article {
		position: relative;
		width: 100%;
		height: 100vh;
		display: flex;
		justify-content: center;
		align-items: center;
		overflow: hidden;
	}
	.img {
		object-fit: cover;
		background-image: radial-gradient(
				circle,
				rgba(0, 0, 0, 0.8) 50%,
				transparent 100%
			),
			radial-gradient(circle, transparent 0%, rgba(0, 0, 0, 0.8) 50%),
			linear-gradient(rgba(0, 0, 0, 0.8), rgba(0, 0, 0, 0)),
			linear-gradient(rgba(0, 0, 0, 0), rgba(0, 0, 0, 0.8));
		mask: radial-gradient(circle at center, white 15%, transparent 50%);
	}
	.img2 {
		width: 100%;
		transition: all 0.5s ease;
		max-width: 500px;
		position: absolute;
		z-index: 1;
		top: 0;
		left: 0;
	}
	.img2:hover {
		filter: drop-shadow(0 0 0.1em crimson);
		transition: all 0.5s ease;
	}
	section {
	}
	section::before {
		z-index: -1;
		content: "";
		position: absolute;
		top: 0;
		right: 0;
		bottom: 0;
		left: 0;
		background-image: url(../img/war1.jpg);
		background-size: cover;
		background-position: center;
		opacity: 0.2;
		height: 100vh;
	}
</style>
