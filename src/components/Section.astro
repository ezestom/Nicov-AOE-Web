---
interface Props {
	title: string;
	body: string;
	href: () => void;
}
const { title, body, href } = Astro.props;

const handleClick = (e: Event) => {
	e.preventDefault();
	console.log("clicked");
	window.history.back();
	window.scrollTo(0, 0);
};
---

<section
	class="p-0 m-0 h-screen w-screen gap-5 flex items-center justify-center">
	<article
		class="article-info grid grid-cols-6 grid-rows-5 gap-5 h-[80%] w-[1000px]">
		<div class="col-span-6 row-span-3 flex items-center justify-center">
			<p class="text-2xl text-center text-slate-100">
				{body}
			</p>
		</div>
		<div class="video-space col-span-3 row-span-2 bg-yellow-200"></div>
		<div class="col-span-3 row-span-2 flex items-center justify-center relative">
			<h2 class="text-5xl text-center text-slate-100">
				About {title}
			</h2>
			<div
				class="flex items-center justify-center absolute bottom-0 right-0">
				<button
					class="bg-slate-100 text-black-50 p-2 rounded-md"
					onclick={handleClick}>
					Back
				</button>
			</div>
		</div>
	</article>
</section>

<style>
	section {
	}
	@media (width <1000px) {
		section {
			width: 100%;
			height: 100%;
		}
	}

	.article-info > div {
		padding: 1px;
		background-color: #23262d;
		background-size: 400%;
		border-radius: 7px;
		background-position: 100%;
		transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
		box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
	}
</style>
