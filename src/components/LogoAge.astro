---
import { Image } from "astro:assets";
import aoe from "../img/AOE.png";
---

<div>
	<Image class="aoe" src={aoe} alt="aoe" />
</div>

<style>
	.aoe {
		position: absolute;
		right: 0;
		width: 200px;
		bottom: 0;
		opacity: 0.3;
		filter: drop-shadow(0 0 0.1em crimson);
		z-index: -10;
		view-transition-name: aoe;
	}
	@media (width < 950px) {
		.aoe {
			top: 0;
			left: 0;
			width: 125px;
		}
	}
</style>
