---
import { Image } from "astro:assets";
import warrior from "../img/warrior5.jpg";
import Card from "../components/Card.astro";
---

<section>
	<Image class="warrior" src={warrior} alt="warrior" />
	<article class="absolute mr-auto">
		<Card
			href="/"
			titleEng="This is a 404 error, you are lost!"
			titleEsp="¡Esto es un error 404, estás perdido!"
			bodyEng="Back to home"
			bodyEsp="Volver al inicio"
		/>
	</article>
</section>

<style>
	.warrior {
		background-image: radial-gradient(
				circle,
				rgba(0, 0, 0, 0.8) 50%,
				transparent 100%
			),
			radial-gradient(circle, transparent 0%, rgba(0, 0, 0, 0.8) 50%),
			linear-gradient(rgba(0, 0, 0, 0.8), rgba(0, 0, 0, 0)),
			linear-gradient(rgba(0, 0, 0, 0), rgba(0, 0, 0, 0.8));
		mask: radial-gradient(circle at center, white 15%, transparent 65%);
	}
	section {
		background: #13151a;
		position: relative;
		width: 100%;
		height: 100vh;
		display: flex;
		justify-content: center;
		align-items: center;
		overflow: hidden;
	}

	section::before {
		background-color: black;
		z-index: -1;
		content: "";
		position: absolute;
		top: 0;
		right: 0;
		bottom: 0;
		left: 0;
		background-image: url(../img/war1.jpg);
		background-size: cover;
		background-position: center;
		opacity: 0.2;
		height: 100vh;
	}
</style>
