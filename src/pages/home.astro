---
import Card from "../components/Card.astro";
import { Image } from "astro:assets";
import wallpaper from "../img/nikov-redbull.jpg";
import Layout from "../layouts/Layout.astro";
import nicov from "../img/nicov-title.png";
import { Youtube } from "../components/Youtube.jsx";
import Switch from "../components/Switch.astro";
---

<Layout title="Home">
	<section class="h-screen p-0 m-0 w-screen flex items-center justify-center">
		<a href="/">
			<Image src={nicov} alt="nicov" class="nicov" />
		</a>

		<ul
			class="grid grid-cols-6 grid-rows-5 gap-3 max-h-[80vh] max-w-[1000px] z-20">
			<li class="col-span-3 row-span-2 rounded-lg relative">
				<a
					href="/about"
					class="about-conteiner absolute top-0 left-0 w-full h-full z-10">
					<h1 class="about">
						Sobre mi
						<span>&rarr;</span>
					</h1>
				</a>
			</li>
			<!-- Youtube -->
			<li class="col-span-1 row-span-1 rounded-lg">
				<Card
					href={"https://www.youtube.com/@NicovAoE"}
					target="_blank"
					titleEng="YouTube"
					titleEsp="YouTube"
					bodyEng="Welcome to my YouTube channel. Subscribe!"
					bodyEsp="Bienvenido a mi canal de YouTube. ¡Suscríbete!"
				/>
			</li>
			<!-- redbull wallpaper -->
			<li class="col-span-2 row-span-4 rounded-lg">
				<Image
					transition:persist
					class="redbull w-full h-full object-cover border-dotted border-2 border-gray-700 rounded-lg"
					src={wallpaper}
					alt="wallpaper-redbull-nicov"
				/>
			</li>

			<li class="col-span-1 row-span-1 rounded-lg">
				<Card
					href={"https://twitter.com/nicovaoe"}
					target="_blank"
					titleEng="Twitter"
					titleEsp="Twitter"
					bodyEng="I await you on my Twitter for updates and discussions!"
					bodyEsp="Te espero en mí Twitter para actualizaciones y discusiones!"
				/>
			</li>
			<!-- Twitter -->
			<li class="col-span-3 row-span-1 rounded-lg">
				<Card
					href={"https://www.instagram.com/nicov_aoe/"}
					
					titleEng="Instagram"
					titleEsp="Fechas de los próximos torneos" 
					bodyEng="loremn sasasdsdsae!"
					bodyEsp="En los siguientes torneos participaré como player, y estaré enfrentando a los mejores jugadores de esta época..."/>
			</li>
			<!-- Twitch -->
			<li class="twitch social col-span-1 row-span-1 rounded-lg">
				<Card
					titleEng="Twitch"
					titleEsp="Twitch"
					href="https://www.twitch.tv/nicov_"
					target="_blank"
					bodyEsp="Únete a mi canal de Twitch y mira mis directos, ¡sígueme!"
					bodyEng="Join my Twitch channel and watch my live streams, follow me!"
				/>
			</li>

			<li class="video col-span-3 row-span-2 rounded-lg">
				<!-- <YoutubePlayer/> -->
				<!-- <Youtube client:visible transition:persist /> -->
			</li>
			<!-- Discord -->
			<li class="discord social col-span-1 row-span-1 rounded-lg">
				<Card
					titleEng="Discord"
					titleEsp="Discord"
					href="https://discord.com/channels/493887716451156018/588089583770665016"
					target="_blank"
					bodyEsp=" ¡Te invito a unirte a la comunidad de Age of Empires en Discord!"
					bodyEng="I invite you to join the Age of Empires community on Discord!"
				/>
			</li>
			<li class="col-span-3 row-span-1 rounded-lg">
				<Card
					href={"/classes"}
					titleEng="AOE Coaching "
					titleEsp="Clases de AOE"
					bodyEng="Play like a Pro! Reach out to me on Discord, via Email, or drop a private message on Twitch if you're keen on learning to play Age of Empires like a pro. Let's start leveling up your game and having a blast together! "
					bodyEsp="¡Domina el juego como un verdadero profesional! Contáctame por Discord, Email o envíame un mensaje privado en Twitch. ¡Empecemos juntos a mejorar tu juego y a disfrutar al máximo! "
				/>
			</li>
		</ul>
		<Switch transition:persist />
	</section>
</Layout>

<style>
	@media (width < 1000px) {
		section {
			height: 100%;
			width: 100%;
		}
		ul {
			grid-template-columns: 1fr;
			grid-template-rows: repeat(6, 1fr);
			padding: 0 2%;
			margin: 0;
		}
		li {
			width: 100%;
			max-height: 150px;
			grid-column: 1 / 2;
			grid-row: auto;
		}
	}
	.about-conteiner {
		color: #d3d4d5;
		height: 100%;
		background-size: 400%;
		border-radius: 8px;
		transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
		box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
		background-image: url("../img/about.jpeg");
		background-position: bottom;
		background-repeat: no-repeat;
		background-size: cover;
		transition: all 0.5s ease-in-out;
	}
	.about {
		background-color: rgb(35 38 45 / 85%);
		display: flex;
		align-items: center;
		justify-content: center;
		font-weight: bold;
		font-size: 1.25em;
	}
	.about-conteiner:hover {
		background-position: center;
		transform: scale(1.05);
		transition: all 0.5s ease-in-out;
	}

	.redbull {
		view-transition-name: redbull;
	}

	.nicov {
		width: 275px;
		position: absolute;
		z-index: 1;
		top: 0;
		right: 0;
		transition: all 0.5s ease-in-out;
		view-transition-name: nicov;
		filter: drop-shadow(0 0 0.05em crimson) brightness(1.2);
	}

	.nicov:hover {
		filter: drop-shadow(0 0 0.3em crimson) brightness(1.5);
	}
	li {
		overflow: hidden;
	}
	section {
		position: relative;
		box-sizing: border-box;
		padding: 0;
		margin: 0;
		color: white;
		font-size: 20px;
		max-width: 100vw;
		max-height: 100vh;
	}
	.video {
		overflow: hidden;
		background-color: rgba(255, 255, 255, 0.1);
		display: grid;
		align-items: center;
	}
	.video:hover {
		filter: drop-shadow(0px 0px 10px crimson);
		animation: pulse 4s infinite ease;
	}
	@keyframes pulse {
		0% {
			filter: drop-shadow(0px 0px 0.1px crimson);
		}
		50% {
			filter: drop-shadow(0px 0px 0.5em crimson);
		}
		100% {
			filter: drop-shadow(0px 0px 0.1px crimson);
		}
	}
</style>
