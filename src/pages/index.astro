	<style>
		@media (width < 1000px) {
			section {
				height: 100%;
				width: 100%;
			}
			ul {
				max-height: 100%;
				width: 100%;
				grid-template-columns: 1fr;
				grid-template-rows: repeat(6, 1fr);
				padding: 0 2%;
				margin: 0;
			}
			li {
				width: 100%;
				max-height: 150px;
				grid-column: 1 / 2;
				grid-row: auto;
			}
		}
		li {
			overflow: hidden;
		}
		section {
			position: relative;
			box-sizing: border-box;
			padding: 0;
			margin: 0;
			color: white;
			font-size: 20px;
		}

		.video:hover {
			filter: drop-shadow(0px 0px 10px crimson);
			animation: pulse 4s infinite ease;
		}
		@keyframes pulse {
			0% {
				filter: drop-shadow(0px 0px 0.1px crimson);
			}
			50% {
				filter: drop-shadow(0px 0px 0.5em crimson);
			}
			100% {
				filter: drop-shadow(0px 0px 0.1px crimson);
			}
		}
	</style>
