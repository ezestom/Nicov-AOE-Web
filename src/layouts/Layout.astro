---
import Header from "../components/Nicov.astro";
import Switch from "../components/Switch.astro";
import WaterBrand from "../components/WaterBrand.astro";
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<!-- Meta tags -->
		<meta charset="UTF-8" />
		<meta name="description" content="Nikov AOE Professional Player" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/logo-oficial.png" />
		<meta name="generator" content={Astro.generator} />

		<!-- External scripts -->

		<!-- Setting the title dynamically from TypeScript/JavaScript file -->
		<title>{title}</title>
	</head>
	<body class="h-auto relative">
		<main>
			<!-- Rendering components -->
			<Switch />
			<slot />
		</main>
		<WaterBrand />
	</body>
</html>

<style is:global>
	:root {
		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(
			141deg,
			#202020 0%,
			white 50%,
			indigo 100%
		);
	}
	html {
		font-family: system-ui, sans-serif;
		background: #13151a;
		color-scheme: dark light;
	}

	section {
		position: relative;
		padding: 0;
		margin: 0;
		box-sizing: border-box;
	}
	section:before {
		z-index: -1;
		content: "";
		position: absolute;
		background-image: url(../img/warrior.png);
		background-size: cover;
		background-position: bottom;
		background-repeat: no-repeat;
		opacity: 0.2;
		height: 100%;
		width: 100%;
	}
</style>
