---
import Header from "../components/Nikov.astro";
import Switch from "../components/Switch.astro";
import WaterBrand from "../components/WaterBrand.astro";
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<!-- Meta tags -->
		<meta charset="UTF-8" />
		<meta name="description" content="Nikov AOE Professional Player" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/logo-oficial.png" />
		<meta name="generator" content={Astro.generator} />

		<!-- External scripts -->


		<!-- Setting the title dynamically from TypeScript/JavaScript file -->
		<title>{title}</title>
	</head>
	<body>
		<main>
			<!-- Rendering components -->
			<Switch />
			<slot />
			<WaterBrand />
		</main>
	</body>
</html>

<style is:global>
	:root {
		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(
			141deg,
			#202020 0%,
			white 50%,
			indigo 100%
		);
	}
	html {
		font-family: system-ui, sans-serif;
		background: #13151a;
		/* background-size: 224px; */
	}
	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}
	main {
		padding: 0;
		margin: 0;
		box-sizing: border-box;
		position: relative;
	}
</style>
